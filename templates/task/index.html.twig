{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des tâches</h1>
    <a href="{{ path('create_task') }}">Créer une nouvelle tâche</a>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Auteur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.author ? task.author.email : 'Anonyme' }}</td>
                <td>
                    <a href="{{ path('view_task', { id: task.id }) }}">Voir</a>
                    <a href="{{ path('edit_task', { id: task.id }) }}">Modifier</a>
                    <form method="post" action="{{ path('delete_task', { id: task.id }) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
