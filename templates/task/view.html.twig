{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de la tâche</h1>
    <p><strong>Nom :</strong> {{ task.name }}</p>
    <p><strong>Description :</strong> {{ task.description }}</p>
    <p><strong>Auteur :</strong> {{ task.author ? task.author.email : 'Anonyme' }}</p>
    <p><strong>Date de création :</strong> {{ task.createdAt|date('d/m/Y H:i') }}</p>
    <p><strong>Dernière mise à jour :</strong> {{ task.updatedAt|date('d/m/Y H:i') }}</p>
    <a href="{{ path('edit_task', { id: task.id }) }}">Modifier</a>
    <a href="{{ path('index_task') }}">Retour</a>
{% endblock %}
